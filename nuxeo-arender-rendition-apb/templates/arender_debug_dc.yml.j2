apiVersion: apps.openshift.io/v1
kind: DeploymentConfig
metadata:
  name: {{ arender_debug_dc_name }}
  namespace: {{ namespace }}
  labels:
    apb_name: '{{ apb_name }}'
    apb_plan_id: '{{ _apb_plan_id }}'
    apb_service_class_id: '{{ _apb_service_class_id }}'
    apb_service_instance_id: '{{ _apb_service_instance_id }}'
    app: {{ app_name }}
spec:
  replicas: 1
  selector:
    app: arender-debug
  template:
    metadata:
      creationTimestamp: null
      labels:
        app: arender-debug
    spec:
      containers:
        - args:
            - sleep
            - '9000000'
          image: ubuntu
          imagePullPolicy: Always
          name: debug
          resources: {}
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          volumeMounts:
            - mountPath: /mount/dfs
              name: dfs
            - mountPath: /mount/converter
              name: converter
            - mountPath: /mount/broker
              name: broker
            - mountPath: /mount/jni
              name: jni
            - mountPath: /mount/pdfbox
              name: pdfbox
            - mountPath: /mount/logs
              name: logs
      volumes:
        - name: dfs
          persistentVolumeClaim:
            claimName: "{{ arender_pdfbox_pvc_name }}"
        - name: converter
          persistentVolumeClaim:
            claimName: "{{ arender_converter_pvc_name }}"
        - name: broker
          persistentVolumeClaim:
            claimName: "{{ arender_rendition_broker_pvc_name }}"
        - name: jni
          persistentVolumeClaim:
            claimName: "{{ arender_jni_pvc_name }}"
        - name: pdfbox
          persistentVolumeClaim:
            claimName: "{{ arender_pdfbox_pvc_name }}"
        - name: logs
          persistentVolumeClaim:
            claimName: "{{ arender_logs_pvc_name }}"

  triggers:
    - type: ConfigChange
