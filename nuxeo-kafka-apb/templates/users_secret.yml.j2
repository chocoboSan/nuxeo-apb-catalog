apiVersion: v1
kind: Secret
type: Opaque
metadata:
  labels:
    app: {{ name }}
    apb_name: '{{ apb_name }}'
    apb_plan_id: '{{ _apb_plan_id }}'
    apb_service_class_id: '{{ _apb_service_class_id }}'
    apb_service_instance_id: '{{ _apb_service_instance_id }}'
    component: {{ component }}
  name: {{ users_secret_name }}
  namespace: {{ namespace }}
data:
  jaas.conf: {{ lookup('file', jaas_conf_path ) | b64encode }}

